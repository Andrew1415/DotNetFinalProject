@page "/items"

@attribute [Authorize]

<PageTitle>Items</PageTitle>
<RadzenStack>
    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Items" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
        </RadzenColumn>
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                <RadzenButton Icon="add_circle_outline" Text="Add" Click="@AddButtonClick" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenColumn>
    </RadzenRow>
    <RadzenRow>
      <RadzenColumn SizeMD=12>
        <RadzenDataGrid @ref="grid0" ColumnWidth="200px"  AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
            Data="@items" Count=count LoadData=@Grid0LoadData  TItem="DotNetGalutinis.Server.Models.Inventory.Item" RowSelect="@EditRow" >
            <Columns>
                <RadzenDataGridColumn TItem="DotNetGalutinis.Server.Models.Inventory.Item" Property="ID" Title="I D">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DotNetGalutinis.Server.Models.Inventory.Item" Property="Name" Title="Name">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DotNetGalutinis.Server.Models.Inventory.Item" Property="Category" Title="Category">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DotNetGalutinis.Server.Models.Inventory.Item" Property="Date_Bought" Title="Date_Bought">
                </RadzenDataGridColumn>
                <RadzenDataGridColumn TItem="DotNetGalutinis.Server.Models.Inventory.Item" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center" Title="Date_Bought">
                    <Template Context="item">

                        <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                            Shade="Shade.Lighter" Variant="Variant.Flat"
                            Click=@(args => GridDeleteButtonClick(args, item)) @onclick:stopPropagation="true" />
                    </Template>
                </RadzenDataGridColumn>
            </Columns>

        </RadzenDataGrid>

    </RadzenColumn>
  </RadzenRow>
</RadzenStack>
